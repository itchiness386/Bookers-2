<% if @newbook.errors.any? %>
  <div id="error_explanation">
  <h3><%= pluralize(@newbook.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @newbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
	<div class="col-xs-3">

	<%= render  'users/userinfo' %>

	<%= render 'books/newbook', book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Option</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr id="books_<%= book.id %>">
						<%= render partial: 'books/books', locals: { book: book } %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>