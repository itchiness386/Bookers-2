<div class="body">
	<div class="container">
		<p></p>

			<div class="row">
				<div class="col-xs-3">

				<%= render  'users/userinfo', user: @user %>

				<%= render 'newbook', book: @book %>

				</div>

				<div class="col-xs-9">
					<h2>Book detail</h2>
					<table class="table">
						<tbody>
							<tr>
								<td>
									<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
									<%= link_to @user.name, user_path(@user.id) %>
								</td>
								<td>
									<%= link_to @book.title, book_path(@book.id) %>
								</td>
								<td>
									<%= @book.body %>
								</td>
								<td>
									<%= link_to 'Edit', edit_book_path(@book.id), class: "btn-sm btn-success edit_book_#{@book.id}" %>
								</td>
								<td>
									<%= link_to 'Destroy', book_path(@book.id), class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
	</div>
</div>
